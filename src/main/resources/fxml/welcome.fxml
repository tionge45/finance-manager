<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="600" prefWidth="800" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.finance.controller.WelcomeController">

    <VBox fx:id="leftPane" alignment="CENTER" spacing="20" style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
        <Label styleClass="title-label" text="Welcome to Finance Manager" />
        <ImageView fx:id="backgroundImage" fitHeight="234.0" fitWidth="379.0" preserveRatio="true">
            <Image url="@images/background.png" />
        </ImageView>
        <Button fx:id="signUpButton" text="Sign Up" />
        <Button fx:id="signInButton" text="Sign In" />

    </VBox>

    <StackPane fx:id="rightPane" prefWidth="266" style="-fx-background-color: #3498db;">
        <ImageView fx:id="logoImage" fitHeight="225.0" fitWidth="261.0" preserveRatio="true">
            <Image url="@images/logo.png" />
        </ImageView>


    </StackPane>

</HBox>
