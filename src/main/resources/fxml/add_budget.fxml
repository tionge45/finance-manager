<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="515.0" prefWidth="423.0" spacing="10" stylesheets="@css/styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="com.finance.controller.AddBudgetController">

    <Label prefHeight="34.0" prefWidth="219.0" styleClass="form-title" text="Create New Budget">
      <stylesheets>
         <URL value="@css/styles.css" />
         <URL value="@css/budget_styles.css" />
      </stylesheets></Label>

          <TextField fx:id="nameField" prefHeight="36.0" prefWidth="346.0" promptText="Name" stylesheets="@css/styles.css" />
    <TextField fx:id="categoryField" promptText="Category" stylesheets="@css/budget_styles.css" />
    <TextField fx:id="amountField" promptText="Amount" />
    <DatePicker fx:id="startDatePicker" prefHeight="48.0" prefWidth="190.0" promptText="Start Date" />
    <DatePicker fx:id="endDatePicker" prefHeight="23.0" prefWidth="191.0" promptText="End Date" />

    <Button onAction="#handleSaveBudget" text="Save" />
</VBox>
