<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="515.0" prefWidth="423.0" spacing="10" style="-fx-background-color: #ecf6fd;" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.finance.controller.AddBudgetController">

    <Label prefHeight="34.0" prefWidth="133.0" style="-fx-background-color: #ecf6fd;" styleClass="form-title" text="Create New Budget" textAlignment="CENTER">
      <stylesheets>
         <URL value="@css/styles.css" />
         <URL value="@css/budget_styles.css" />
      </stylesheets>
    </Label>

    <TextField fx:id="nameField" prefHeight="36.0" prefWidth="346.0" promptText="Name" stylesheets="@css/budget_styles.css" />
    <TextField fx:id="categoryField" maxWidth="166.0" prefHeight="38.0" prefWidth="166.0" promptText="Category" stylesheets="@css/budget_styles.css" />
    <TextField fx:id="amountField" promptText="Amount" />
    <DatePicker fx:id="startDatePicker" prefHeight="48.0" prefWidth="190.0" promptText="Start Date" />
    <DatePicker fx:id="endDatePicker" prefHeight="23.0" prefWidth="191.0" promptText="End Date" stylesheets="@css/budget_styles.css" />

    <Button onAction="#handleSaveBudget" text="Save" />
</VBox>
